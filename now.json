{
  "name": "plenny",
  "version": 2,
  "alias": ["plenny.no"],

  "builds": [
    { "src": "packages/web/package.json", "use": "@now/next" },
    { "src": "packages/sanity/package.json", "use": "@now/static-build" }
  ],
  
  "routes": [
    { "src": "^/sanity/static/(.*)", "dest": "/packages/sanity/static/$1" },
    { "src": "^/sanity/(.*)", "dest": "/packages/sanity/index.html" },
    { "src": "^/sanity", "dest": "/packages/sanity/index.html" },
    { "src": "/(.*)", "dest": "/packages/web/$1" },
    { "src": "/.*", "status": 404, "dest": "/packages/web/404" }
  ]
}
